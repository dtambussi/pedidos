<!DOCTYPE html>
<html>
<head>

    <title>{% block title %}Pedidos{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('bundles/pedidos/images/favicon.ico')}}" />
    <meta content="" name="author">
    <meta content="3 month" name="revisit-after">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="google-site-verification">
    <meta content="text/html; charset=utf-8" http-equiv="Content-Type">
    <meta content="IE=edge,chrome=1,IE=EmulateIE10" http-equiv="X-UA-Compatible">
    <meta content="no-cache" http-equiv="cache-control">
    <meta content="no-cache" http-equiv="pragma">
    <meta content="0" http-equiv="expires">

    {% block stylesheets %}
        {% stylesheets
            'bundles/pedidos/vendor/bootstrap/css/bootstrap.css'
            'bundles/pedidos/fonts/font-awesome/css/font-awesome.min.css'
            'bundles/pedidos/vendor/bootstrap-datepicker/css/bootstrap-datepicker.min.css'
            'bundles/pedidos/css/main.css'
        filter='?uglifycss' filter='cssrewrite'  %}
        <link rel="stylesheet" href="{{ asset_url }}" rel="stylesheet" type="text/css" />
        {% endstylesheets %}
    {% endblock %}

    {% block javascripts %}
        {% javascripts
            '@PedidosBundle/Resources/public/vendor/jquery/jquery.js'
            '@PedidosBundle/Resources/public/vendor/bootstrap/js/bootstrap.js'
            '@PedidosBundle/Resources/public/vendor/bootstrap-datepicker/js/bootstrap-datepicker.js'
            '@PedidosBundle/Resources/public/js/global-functions.js'
            '@PedidosBundle/Resources/public/js/form/field_format.js'
        %}
        <script src="{{ asset_url }}"></script>
        <script>
        </script>
        {% endjavascripts %}
        <script>
        </script>
    {% endblock %}
</head>

<body>
{% include 'PedidosBundle:layout:header.html.twig' %}

{% if form is defined %}
    {% form_theme form 'PedidosBundle:form:fields.html.twig' %}
{% endif %}

<div id="body-content">
    <div class="container-fluid">
        {% block body %}
        {% endblock %}
    </div>
</div>

</body>
{% include 'PedidosBundle:layout:footer.html.twig' %}
</html>
